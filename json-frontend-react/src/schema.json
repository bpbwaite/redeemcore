{
  "type": "object",
  "properties": {
    "actions": {
      "type": "array",
      "title": "Actions",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 4,
            "maxLength": 32,
            "description": "Pick something friendly"
          },
          "enabled": {
            "type": "boolean"
          },
          "category": {
            "type": "string",
            "enum": [
              "Normal (list)",
              "Initialization",
              "Periodic"
            ]
          },
          "period": {
            "type": "integer",
            "minimum": 1000,
            "maximum": 86400000,
            "description": "The action will run this often (ms)"
          },
          "accepted_modes": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "oneOf": [
                {
                  "const": "tips",
                  "title": "Tips"
                },
                {
                  "const": "bits",
                  "title": "Bits"
                },
                {
                  "const": "points",
                  "title": "Points"
                },
                {
                  "const": "subs",
                  "title": "Subscriptions"
                },
                {
                  "const": "follow",
                  "title": "Follows"
                }
              ]
            }
          },
          "exact_or_multiple_credit": {
            "type": "string",
            "enum": [
              "Exact",
              "Multiple-Credit",
              "Neither (minimum)"
            ],
            "description": "Run only when a certain amount is donated, repeat based on donation amount, or run when a minimum is met"
          },
          "cost": {
            "type": "integer",
            "minimum": 1,
            "maximum": 99999999,
            "description": "A number of cents or bits"
          },
          "uuid_pts": {
            "type": "string",
            "minLength": 36,
            "maxLength": 36,
            "description": "You get this from a Twitch bot"
          },
          "regexp_pts": {
            "type": "string",
            "minLength": 2,
            "description": "Groups can be accessed by Steps"
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "function": {
                  "type": "string",
                  "enum": [
                    "Set Pin",
                    "Set PWM Value",
                    "Toggle Pin",
                    "Delay",
                    "Servo Control"
                  ]
                },
                "pin": {
                  "type": "string",
                  "description": "Example: GPIO18"
                },
                "state": {
                  "type": "string",
                  "description": "HIGH, LOW, PWM 8-bit hex"
                },
                "duration": {
                  "type": "string",
                  "description": "Delay time (ms)"
                },
                "repeat": {
                  "type": "string",
                  "description": "Delay repetitions"
                },
                "position_deg": {
                  "type": "string",
                  "description": "Servo angle (degrees)"
                }
              }
            }
          }
        },
        "required": [
          "name",
          "enabled",
          "category",
          "steps"
        ]
      }
    }
  }
}
