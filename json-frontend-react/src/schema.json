{
  "type": "object",
  "properties": {
    "actions": {
      "type": "array",
      "title": "Actions",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 4,
            "maxLength": 64,
            "description": "Pick something friendly"
          },
          "enabled": {
            "type": "boolean"
          },
          "category": {
            "type": "string",
            "enum": [
              "Event",
              "Initialization",
              "Periodic"
            ]
          },
          "period": {
            "type": "integer",
            "minimum": 1000,
            "maximum": 86400000,
            "description": "The action will run this often (ms)"
          },
          "limited": {
            "type": "boolean"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1,
            "description": "Redemption limit (per-stream)"
          },
          "accepted_modes": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "oneOf": [
                {
                  "const": "tips",
                  "title": "Tips"
                },
                {
                  "const": "bits",
                  "title": "Bits"
                },
                {
                  "const": "points",
                  "title": "Points"
                },
                {
                  "const": "subs",
                  "title": "Subscriptions"
                },
                {
                  "const": "follow",
                  "title": "Follows"
                },
                {
                  "const": "raid",
                  "title": "Raid"
                }
              ]
            }
          },
          "exact_or_multiple_credit": {
            "type": "string",
            "enum": [
              "Minimum",
              "Exact",
              "Multiple-Credit"
            ],
            "description": "Minimum: Run once when the cost is exceeded. Exact: Run only when exactly the cost is donated. Multiple-Credit: Run (donation amount)/(cost) times."
          },
          "cost": {
            "type": "integer",
            "minimum": 1,
            "maximum": 99999999,
            "description": "For tips, enter value without decimal point"
          },
          "uuid_pts": {
            "type": "string",
            "minLength": 36,
            "maxLength": 36,
            "description": "You get this from a Twitch bot or using debug mode"
          },
          "regexp_pts": {
            "type": "string",
            "minLength": 2,
            "description": "Groups can be accessed by Steps. Enter '()' for none."
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "function": {
                  "type": "string",
                  "enum": [
                    "Set Pin",
                    "Set PWM Value",
                    "Toggle Pin",
                    "Delay",
                    "Servo Control"
                  ]
                },
                "pin": {
                  "type": "string",
                  "description": "Example: GPIO18"
                },
                "state": {
                  "type": "string",
                  "description": "HIGH, LOW, PWM 8-bit hex"
                },
                "duration": {
                  "type": "string",
                  "description": "Delay time (ms)"
                },
                "repeat": {
                  "type": "string",
                  "description": "Delay repetitions"
                },
                "position_deg": {
                  "type": "string",
                  "description": "Servo angle (degrees)"
                }
              }
            }
          }
        },
        "required": [
          "name",
          "category",
          "steps"
        ]
      }
    }
  }
}
